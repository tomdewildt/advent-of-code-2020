{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "advent-of-code-2020",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/advent-of-code-2020/advent-of-code-2020.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [
                "${input:day}",
                "-f",
                "${input:file}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Enter a day number.",
            "default": "1",
        },
        {
            "id": "file",
            "type": "promptString",
            "description": "Enter a input file.",
            "default": "./assets/day1/day1.txt",
        }
    ]
}